<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.androidchess20">

    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.ACTION_OPEN_DOCUMENT" />
    <application
        android:allowBackup="true"
        android:fullBackupContent="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:requestLegacyExternalStorage="true"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.AndroidChess20"
        android:exported="true">
        <activity
            android:name=".PhotoSearchResults"
            android:label="@string/title_activity_photo_search_results"
            android:theme="@style/Theme.AndroidChess20.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.androidchess20.PhotoSearchResults" />
        </activity>
        <activity
            android:name=".PhotoSearch"
            android:label="@string/title_activity_photo_search"
            android:theme="@style/Theme.AndroidChess20.NoActionBar" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.androidchess20.PhotoSearch" />
        </activity>
        <activity
            android:name=".PhotoDisplay"
            android:label="@string/title_activity_photo_display"
            android:theme="@style/Theme.AndroidChess20.NoActionBar" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.androidchess20.PhotoDisplay" />
        </activity>
        <activity
            android:name=".AlbumDisplay"
            android:label="@string/title_activity_album_display"
            android:theme="@style/Theme.AndroidChess20.NoActionBar"
            android:exported="true">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.androidchess20.AlbumDisplay" />
        </activity>
        <activity android:name=".MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>